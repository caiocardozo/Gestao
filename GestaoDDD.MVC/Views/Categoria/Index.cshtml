@model IEnumerable<GestaoDDD.Application.ViewModels.CategoriaViewModel>

@{
    var msg = ViewBag.Retorno as string;
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }


    <script src="~/Scripts/Adicionais/ListaPrestadorAdmin.js"></script>
    @*---*@


    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="http://getbootstrap.com/dist/js/bootstrap.min.js"></script>

    <div class="container">
        <div class="row">
            

            <div class="col-md-12">
                <h2>Lista de prestadores</h2>
                <strong>@msg</strong>
                
                <div class="container">
                    <p>
                        <strong>Nova Categoria:</strong>
                        <a href="~/Categoria/Cadastrar/" class="btn btn-primary btn-xs" title="Add categoria">
                            <span class="glyphicon glyphicon-plus"></span>
                        </a>
                    </p>

                </div>

                <div class="table-responsive">
                    <table id="mytable" class="table table-bordred table-striped">

                        <thead>

                        <th>Nome</th>

                        <th>Editar</th>
                        <th>Excluir</th>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.cat_Nome)
                                    </td>

                                    <td>
                                        <p data-placement="top" data-toggle="tooltip" title="Edit">
                                            <a href="~/Categoria/Editar/@item.cat_Id" class="btn btn-primary btn-xs" title="Editar">
                                                <span class="glyphicon glyphicon-pencil"></span>
                                            </a>
                                        </p>
                                    </td>
                                    <td>
                                        <a class="btn btn-danger btn-xs" data-toggle="modal" data-target="#delete" data-placement="top" rel="tooltip" data-title="Excluir">
                                            <span class="glyphicon glyphicon-trash"></span>
                                        </a>
                                    </td>
                                </tr>
                                //MODAL DELETE
                                <div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                                <h4 class="modal-title custom_align" id="Heading">Excluir</h4>
                                            </div>
                                            <div class="modal-body">
                                                <div class="alert alert-warning"><span class="glyphicon glyphicon-warning-sign"></span> Deseja realmente excluir este serviço?</div>
                                            </div>
                                            <div class="modal-footer ">
                                                <a class="btn btn-success" href="~/Categoria/Deletar/@item.cat_Id">
                                                    <span class="glyphicon glyphicon-ok-sign"></span>
                                                </a>
                                                <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span></button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                //FIM MODAL DELETE
                            }

                        </tbody>

                    </table>

                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                    <h4 class="moxdal-title custom_align" id="Heading">Editar Categoria</h4>
                </div>
                <div class="modal-body">
                    
                    <input class="form-control text-box single-line" data-val="true" data-val-maxlength="Tamanho máximo de nome caracteres" 
                           data-val-maxlength-max="200" data-val-minlength="Mínimo nome caracteres" data-val-minlength-min="2" data-val-required="Preencha o campo nome" id="cat_Nome" name="cat_Nome" type="text">
                    

                    

                    @*<div class="form-group">
                                <input class="form-control " type="text" placeholder="Mohsin">
                            </div>
                            <div class="form-group">

                                <input class="form-control " type="text" placeholder="Irshad">
                            </div>
                            <div class="form-group">
                                <textarea rows="2" class="form-control" placeholder="CB 106/107 Street # 11 Wah Cantt Islamabad Pakistan"></textarea>
                            </div>*@
                </div>
                        <div class="modal-footer ">
                            <button type="button" class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span> Update</button>
                        </div>
                    </div>
            <!-- /.modal-content -->
                    </div>
        <!-- /.modal-dialog -->
                    </div>



                        <div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                                        <h4 class="modal-title custom_align" id="Heading">Delete this entry</h4>
                                    </div>
                                    <div class="modal-body">

                                        <div class="alert alert-danger"><span class="glyphicon glyphicon-warning-sign"></span> Are you sure you want to delete this Record?</div>

                                    </div>
                                    <div class="modal-footer ">
                                        <button type="button" class="btn btn-success"><span class="glyphicon glyphicon-ok-sign"></span> Yes</button>
                                        <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No</button>
                                    </div>
                                </div>
                                <!-- /.modal-content -->
                            </div>
                            <!-- /.modal-dialog -->
                        </div>
