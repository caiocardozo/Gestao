@model GestaoDDD.Application.ViewModels.OrcamentoViewModel

@{
    ViewBag.Title = "Deletar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Deletar orçamento</h2>

<h3>Tem certeza que deseja apagar este orçamento?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.orc_descricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.orc_descricao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.orc_Endereco)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.orc_Endereco)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.orc_nome_solicitante)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.orc_nome_solicitante)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.orc_email_solicitante)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.orc_email_solicitante)
        </dd>

       </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <input type="button" value="Cancelar" class="btn btn-default" onclick="location.href='@Url.Action("ListarTodos", "Orcamento")'" />
        </div>
    }
</div>
