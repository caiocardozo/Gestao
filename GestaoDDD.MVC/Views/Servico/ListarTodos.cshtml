@model IEnumerable<GestaoDDD.Application.ViewModels.ServicoViewModel>

    @{
        var msg = ViewBag.Retorno as string;
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }


    <script src="~/Scripts/Adicionais/ListaPrestadorAdmin.js"></script>
    @*---*@


    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="http://getbootstrap.com/dist/js/bootstrap.min.js"></script>

    <div class="container">
        <div class="row">


            <div class="col-md-12">
                <h4>Lista de prestadores</h4>
                <br />
                <div class="container" style="position:relative; left: 40%; color: #dc143c" >
                    <strong>@msg</strong>    
                </div>
                
                <div class="container">
                    <p>
                        <strong>Novo Serviço:</strong>
                        <a href="~/Servico/Cadastrar/" class="btn btn-primary btn-xs" title="Novo Serviço">
                            <span class="glyphicon glyphicon-plus"></span>
                        </a>
                    </p>

                </div>


                <div class="table-responsive">
                    <table id="mytable" class="table table-bordred table-striped">

                        <thead>

                        <th>Nome</th>
                        <th>Categoria</th>
                        <th>Editar</th>
                        <th>Excluir</th>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                if (item.serv_Nome == "chuveiro")
                                {
                                }
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.serv_Nome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Categoria.cat_Nome)
                                    </td>


                                    <td>
                                        <p data-placement="top" data-toggle="tooltip" title="Editar">
                                            <a href="~/Servico/Editar/@item.serv_Id" class="btn btn-primary btn-xs" title="Editar">
                                                <span class="glyphicon glyphicon-pencil"></span>
                                            </a>
                                        </p>
                                    </td>

                                    <td>
                                        <a class="btn btn-danger btn-xs" href="~/Servico/Deletar/@item.serv_Id" data-toggle="modal" data-target="#delete" data-placement="top" rel="tooltip" data-title="Excluir">
                                            <span class="glyphicon glyphicon-trash"></span>
                                        </a>
                                    </td>
                                </tr>
                                <div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-hidden="false">
                                    <div class="modal-dialog">
                                        <div class="modal-content">

                                        </div>
                                    </div>
                                </div>
                            }

                        </tbody>

                    </table>

                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>

