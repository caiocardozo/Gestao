@model IEnumerable<GestaoDDD.Application.ViewModels.ServicoViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

                      <div class="row">
                          <div class="panel panel-default">
                              <div class="panel-body">
                                  <div class="col-lg-2"><h3>Serviços</h3></div>
                                  <div class="col-lg-8">
                                      <form class="navbar-form navbar-left" role="search">
                                          @using (Html.BeginForm("Index", "Servicos"))
                                          {
                                              <div class="form-group">
                                                  Busca por Nome : <input type="text" name="nomeBusca" id="nomeBusca" class="form-control" placeholder="E-mail">
                                              </div>
                                              <button type="submit" class="btn btn-success">Buscar</button>
                                          }
                                      </form>
                                  </div>
                                  <div class="col-lg-offset-10">
                                      <a href="~/Servico/Cadastrar" class="btn btn-info" title="Nova Serviço">Novo Serviço <span class="glyphicon glyphicon-new-window" aria-hidden="true"></span></a>
                                  </div>
                              </div>
                          </div>
                          <table class="table">
                              <tr>
                                  <th>
                                      @Html.DisplayNameFor(model => model.serv_Nome)
                                  </th>
                                  <th>
                                      @Html.DisplayNameFor(model => model.cat_Id)
                                  </th>
                                  <th></th>
                              </tr>

                              @foreach (var item in Model)
                              {
                                  <tr>
                                      <td>
                                          @Html.DisplayFor(modelItem => item.serv_Nome)
                                      </td>
                                      <td>
                                          @Html.DisplayFor(modelItem => item.cat_Id)
                                      </td>
                                      <td>
                                          @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                          @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                          @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                                      </td>
                                  </tr>
                              }

                          </table>
