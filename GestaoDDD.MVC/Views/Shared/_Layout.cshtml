<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title  Agiliza Orçamentos</title>
    <link rel="icon" href="~/Content/Imagens/icone.png" />
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <link href="~/Content/_Layout/layout.css" rel="stylesheet" />

</head>
<body>
    <div class="navbar navbar-default" id="navibar">
        <div class="navbar-header">
            <a class="navbar-brand" style="color: #ffffff" href="~/Prestador/Cadastrar">Agiliza Orçamentos</a>


            @{
                if (Request.IsAuthenticated)
                {
                    if (User.IsInRole("Admin"))
                    {
                        <div class="btn btn-group">
                            <a class="btn" href="#" data-toggle="dropdown">
                                Administrar
                            </a>

                            <ul class="dropdown-menu">
                                <li>
                                   <a href="#"> @Html.ActionLink("Prestadores", "Index", "Prestador")</a>
                                </li>
                            </ul>
                        </div>
                        
                    }
                }
            }
        </div>
        @Html.Partial("_LoginPartial")

    </div>

    @RenderBody()

</body>
<footer class="footer" style="position:static; bottom: 0px">
    <div class="center">
        <p><small><b>agiliza orçamentos</b> | <a href="mailto:contato@agilizapracamentos.com.br">contato@agilizapracamentos.com.br</a></small></p>
    </div>
</footer>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/Content/css")
@Scripts.Render("~/Scripts/jquery-2.1.4.js")
@Scripts.Render("~/Scripts/jquery-2.1.4.min.js")
@Scripts.Render("~/bundles/jqueryval")



@RenderSection("scripts", required: false)

</html>