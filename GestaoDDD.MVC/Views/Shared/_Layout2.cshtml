<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title Agiliza Orçamentos</title>
    <link rel="icon" href="~/Content/Imagens/icone.png" />
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
    <script src="~/Scripts/Adicionais/menufixo.js"></script>

    <link href="~/Content/_Layout/layout2.css" rel="stylesheet" />

  

</head>
<body>
   

    <nav class="navbar navbar-default" id="navibar">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" style="color: white" href="~/Home/Index">Agiliza Orçamentos</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">




                @Html.Partial("_LoginPartial")
                @{
                    if (Request.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Prestadores", "Index", "Prestador")</li>
                        }

                        var claimsIdentity = User.Identity as System.Security.Claims.ClaimsIdentity;
                        var claim = claimsIdentity.FindFirst(c => c.Type == "AdmUsers");

                        if (claim != null)
                        {
                            if (claim.Value == "True")
                            {
                                <li>@Html.ActionLink("Admin Users", "Index", "UsersAdmin")</li>
                            }
                        }

                        claim = claimsIdentity.FindFirst(c => c.Type == "AdmClaims");
                        if (claim != null)
                        {
                            if (claim.Value == "True")
                            {
                                <li>@Html.ActionLink("Admin Claims", "Index", "ClaimsAdmin")</li>
                            }
                        }
                    }

                }
            </div>
        </div>
    </nav>

   

    <div class="menunavegacao col-md-12 col-sm-12 col-xs-12" id="menuHeader">
        <div class="row logomenu col-md-4 col-sm-4 col-xs-10">
            <img src="~/Images/Home/logomenu.png">
        </div>
        <div class="navbarmenu col-md-7">
            <nav class="navbar navbar-findcond">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#teste">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
             
                    </div>
                    <div class="collapse navbar-collapse" id="teste">
                        <ul class="nav navbar-nav navbar-left">
                            <li class="active"><a href="~/Home/Index">Início <span class="sr-only">(current)</span></a></li>
                            <li class="active"><a href="~/Orcamento/Cadastrar">Orçamentos <span class="sr-only">(current)</span></a></li>
                            <li class="active"><a href="~/Servico/Index">Serviços <span class="sr-only">(current)</span></a></li>
                            <li class="active"><a href="~/ComoFunciona/Index">Como Funciona <span class="sr-only">(current)</span></a></li>
                        </ul>
                      
                    </div>
                </div>
            </nav>

        </div>
        <div class="redessociaistopo col-md-1 col-sm-2">
            <span><a href="#"><img src="~/Images/Home/instagram2.png" id="redessociais"></a></span>
            <span><a href="#"><img src="~/Images/Home/facebook2.png" id="redessociais"></a></span>
        </div>

    </div>


    @RenderBody()

</body>
       <div class="prefooter col-md-6">
           <section class="row logorodape col-md-4 col-sm-4">
               <img src="~/Images/Home/logo.png">
           </section>
           <div class="row texto-rodape col-md-7 col-sm-7">
               <a href="">Quem Somos</a>
               &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
               <a href="">Termos de Uso</a>
               &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
               <a href="~/Contato/Create">Contato</a>   
            </div>
           <div class="row redessociais col-md-1 col-sm-2">
               <span><a href="#"><img src="~/Images/Home/instagram.png" id="redessociais"></a></span>
               <span><a href="#"><img src="~/Images/Home/facebook.png" id="redessociais"></a></span>
           </div>
            
            <hr id="linha-rodape" />
       </div>
<footer class="footer" style="bottom: 0px">
   
    <div class="center">
        <p><small><b>Agiliza Orçamentos</b>&nbsp;&nbsp;&nbsp; | &nbsp;&nbsp;&nbsp;<a href="mailto:contato@agilizapracamentos.com.br">contato@agilizaorcamentos.com.br</a></small></p>
    </div>
</footer>



@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/Content/css")
@Scripts.Render("~/Scripts/jquery-2.1.4.js")
@Scripts.Render("~/Scripts/jquery-2.1.4.min.js")
