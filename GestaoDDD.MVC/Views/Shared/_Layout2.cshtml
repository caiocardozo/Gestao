               &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
               <a href="">Contato</a>   
            </div>
           <div class="row redessociais col-md-1 col-sm-2">
               <span><a href="#"><img src="~/Images/Home/instagram.png" id="redessociais"></a></span>
               <span><a href="#"><img src="~/Images/Home/facebook.png" id="redessociais"></a></span>
           </div>
            
            <hr id="linha" />
       </div>
<footer class="footer" style="bottom: 0px">
   
    <div class="center">
        <p><small><b>Agiliza Orçamentos</b>&nbsp;&nbsp;&nbsp; | &nbsp;&nbsp;&nbsp;<a href="mailto:contato@agilizapracamentos.com.br">contato@agilizaorcamentos.com.br</a></small></p>
    </div>
</footer>

@Scripts.Render("~/bundles/jquery")
