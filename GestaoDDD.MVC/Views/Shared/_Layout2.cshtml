<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title Agiliza Orçamentos</title>
    <link rel="icon" href="~/Content/Imagens/icone.png" />
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <link href="~/Content/_Layout/layout2.css" rel="stylesheet" />

</head>
<body>
    <nav class="navbar navbar-default" id="navibar">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" style="color: white" href="#">Agiliza Orçamentos</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">




                @Html.Partial("_LoginPartial")
                @{
                    if (Request.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Prestadores", "Index", "Prestador")</li>
                        }

                        var claimsIdentity = User.Identity as System.Security.Claims.ClaimsIdentity;
                        var claim = claimsIdentity.FindFirst(c => c.Type == "AdmUsers");

                        if (claim != null)
                        {
                            if (claim.Value == "True")
                            {
                                <li>@Html.ActionLink("Admin Users", "Index", "UsersAdmin")</li>
                            }
                        }

                        claim = claimsIdentity.FindFirst(c => c.Type == "AdmClaims");
                        if (claim != null)
                        {
                            if (claim.Value == "True")
                            {
                                <li>@Html.ActionLink("Admin Claims", "Index", "ClaimsAdmin")</li>
                            }
                        }
                    }

                }
            </div>
        </div>
    </nav>


    @RenderBody()

</body>
       <div class="prefooter col-md-12">
           <section class="row logorodape col-md-4 col-sm-4">
